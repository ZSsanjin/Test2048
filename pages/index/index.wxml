<!--index.wxml-->
<view class="container" >

  <view class="userinfo">
      
      <text class='title'>欢迎来到2048-Battle小游戏</text>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>

      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    
  </view>

 

<view class="usermotto"> 
    <button   bindtap='Goto2048'> 单人游戏 </button>
</view>

<view class="usermotto">
    <button   bindtap='Goto2048Time'> 单人限时 </button>
</view>




    <button   bindtap='Goto2048Time'  open-type='share'> 对战游戏 </button>




<view  class="usermotto">
    <button   bindtap='Gotorecord'> 历史记录 </button>
</view>
</view>
